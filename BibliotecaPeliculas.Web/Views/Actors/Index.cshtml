@model IEnumerable<LibraryFilms.Web.Data.Entities.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>Actores</h1>

<a class="btn btn-info" asp-action="Create">New Actor</a>
<table class="table table-bordered mt-3">

            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Descripción</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" style="display:coments">
                                <button class="btn btn-danger btnDelete">Eliminar</button>
                            </form> 
                        </td>
                    </tr>
                }
            </tbody>
</table>

        @section Scripts {
            <script>

                $(document).ready(function () {
                    
                    $('.btnDelete').click(function (event) {
                        Swal.fire({
                            title: "Desea eliminar el Actor?",
                            text: "No podrá cambiarlo al ejecutar esta opción?",
                            icon: "question"
                            showCancelButton: true,
                        }).then((result) => {
                            if (result.isConfirmed) {
                                const form = $(this).closest('form');

                                form.submit();
                            }
                        });
                    });
                });

            </script>
        }

