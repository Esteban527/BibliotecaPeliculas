@model LibraryFilms.Web.DTOs.FilmDTO

@{
    ViewData["Title"] = "Nueva película";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="pagetitle">
    <h1>Nueva película</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Películas</a></li>
            <li class="breadcrumb-item active">Nueva Película</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Nueva Película</h5>

            <form class="row g-3" asp-action="Create" method="POST">

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control">
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Genre" class="form-control">
                        <label asp-for="Genre"></label>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="PublishDate" class="form-control">
                        <label asp-for="PublishDate"></label>
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="DirectorId" asp-items="@(new SelectList(Model.Directors, "Value", "Text"))" class="form-control">
                            <option value="">Selecciona un director</option>
                        </select>
                        <label asp-for="DirectorId"></label>
                        <span asp-validation-for="DirectorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
