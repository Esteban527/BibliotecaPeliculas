@model LibraryFilms.Web.Data.Entities.Film

@{
    ViewData["Title"] = "Nueva pelicula";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="pagetitle">
    <h1>Nueva pelicula</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Peliculas</a></li>
            <li class="breadcrumb-item active">Nueva Pelicula</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Nueva Pelicula</h5>

            <form class="row g-3" asp-action="Create" method="POST">

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control" placeholder="@Html.DisplayFor(model => model.Title)">
                        <label>@(Html.DisplayNameFor(model => model.Title))</label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Genre" asp-items="Model.Genre" class="form-control" placeholder="@Html.DisplayFor(model => model.Genre)">
                        <label>@(Html.DisplayNameFor(model => model.Genre))</label>
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="PublishDate" asp-items="Model.PublishDate" class="form-control" >
                        <label>@(Html.DisplayNameFor(model => model.PublishDate))</label>
                        <span asp-validation-for="PublishDate" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-12">
                    <label>@(Html.DisplayNameFor(model => model.Description))</label>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>

</section>


