@model IEnumerable<LibraryFilms.Web.Data.Entities.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

<a class="btn btn-info" asp-action="Create">Nuevo Rol</a>
<table class="table-responsive">

    <thead>
        <tr>
            <th>Nombre Rol</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" style="display:contents">
                        <button class="btn btn-danger btnDelete">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts {
    <script>
        $(document).ready(function() {

            $('.btnDelete').click(function (event) {

                event.preventDefault();

                Swal.fire({
                    title: "¿Desea eliminar el Rol?",
                    text: "That thing is still around?",
                    icon: "question",
                    showCancelButton: true,
                }).then((result) => {

                    if (result.isConfirmed) {

                        const form = $(this).closest('form');

                        form.submit();

                    }

                });

            });

        });

    </script>
}    

