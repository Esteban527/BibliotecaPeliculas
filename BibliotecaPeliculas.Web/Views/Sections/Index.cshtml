@model IEnumerable<LibraryFilms.Web.Data.Entities.Section>

@{
    ViewData["Title"] = "Secciones";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Secciones</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">

    <div class="card">

        <div class="card-header py-3">
            <div class="row">
                <h3 class="m-o font-weight-bolt text-primary col-md-11">Secciones</h3>
                <div class="col-md-1">
                    <a asp-action="Create" class="btn btn-primary">Nueva Sección</a>
                </div>
            </div>
        </div>

        <div class="card-body">

            
            <table class="table table-bordered">
                <thead>
                    <tr>

                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.IsHidden)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsHidden)</td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    </section>
