@model LibraryFilms.Web.DTOs.DirectorDTO
@{
    ViewData["Title"] = "Nuevo Director";
    Layout = "~/Views/Shared/_MyLayout.cshtml";

}

<div class="pagetitle">
    <h1>Nuevo Director</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index">Directores</a></li>
            <li class="breadcrumb-item active">Nuevo Director</li>
        </ol>
    </nav>
</div>

<section class="section dashboard">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Agregar Director</h5>

            <form class="row g-3" asp-action="Create" method="POST">

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayFor(model => model.FirstName)">
                        <label>@(Html.DisplayNameFor(model => model.FirstName))</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="LastName" asp-items="Model.LastName" class="form-control" placeholder="@Html.DisplayFor(model => model.LastName)">
                        <label>@(Html.DisplayNameFor(model => model.LastName))</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <label>@(Html.DisplayNameFor(model => model.Description))</label>
                    <textarea asp-for="Description" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
            </form>

        </div>
    </div>

</section>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

